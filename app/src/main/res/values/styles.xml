<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:colorBackground">@color/primary_light</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="title_cv" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:background">@color/bg_cv_title</item>
        <item name="android:padding">@dimen/cv_text_padding</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="AppTheme.CircularImageView">
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_marvel</item>
    </style>

    <style name="AppTheme.MainImage">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/background_superhero_detail</item>
    </style>

    <style name="AppTheme.TittleDetail" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">85dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.SubtittleDetail" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">110dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.VpInfoTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:padding">@dimen/activity_horizontal_margin</item>

    </style>

    <style name="AppTheme.VpInfoContent" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>

    </style>

    <style name="AppTheme.IcVpSuperhero" parent="AppTheme">
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>
</resources>
